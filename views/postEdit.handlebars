{{!-- edit post --}}
<div class="card">
  <h3 class="card-header">edit post</h3>
  <form class="card-body edit-form" data-id="{{post.id}}">
    <div>
      <label for="post-title" class="form-label">title</label>
      <input name="post-title" id="post-title" type="text" value="{{post.title}}" class="form-input" />
    </div>
    <div>
      <label class="form-label" for="post-body">share yr thoughts</label>
      <textarea name="body" id="post-body" class="form-input">{{post.body}}</textarea>
    </div>
    <div>
      <button type="submit" class="btn">update post</button>
    </div>
  </form>
</div>

<script src="/js/postEdit.js"></script>